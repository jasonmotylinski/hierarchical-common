{
    "compilerOptions": {
      "baseUrl": ".",
      "inlineSourceMap": true,
      "inlineSources": true,
      "module": "ESNext",
      "target": "ES6",
      "allowJs": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "strictNullChecks": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "lib": [
        "DOM",
        "ES5",
        "ES6",
        "ES7"
      ],
      "outFile": "./dist/index.d.ts"
    },
    "include": [
      "src/**/*.ts"
    ]
  }
  